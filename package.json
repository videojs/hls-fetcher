{
  "name": "hls-fetcher",
  "version": "2.2.1",
  "description": "Fetch HLS segments from an m3u8 playlist",
  "main": "src/index.js",
  "scripts": {
    "docs:toc": "doctoc README.md",
    "lint": "vjsstandard",
    "pretest": "npm run lint",
    "start": "npm run test -- --watch",
    "test": "NODE_ENV=test mocha --opts test/opts/unit.opts test/unit",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "prepublishOnly": "vjsverify --skip-es-check"
  },
  "bin": {
    "hls-fetcher": "./src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/videojs/hls-fetcher.git"
  },
  "contributors": [
    "Jon-Carlos Rivera <jon.carlos.rivera@gmail.com> (http://jon-carlos.com/)",
    "Brandon Casey <brandonocasey@gmail.com> (https://github.com/brandonocasey)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/imbcmdth/hls-fetcher/issues"
  },
  "homepage": "https://github.com/imbcmdth/hls-fetcher#readme",
  "dependencies": {
    "aes-decrypter": "^3.0.0",
    "bluebird": "^3.4.0",
    "filenamify": "^4.1.0",
    "m3u8-parser": "^4.4.2",
    "mkdirp": "^0.5.1",
    "mpd-parser": "^0.9.0",
    "pessimist": "^0.3.5",
    "request": "^2.87.0",
    "requestretry": "^2.0.0"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.1",
    "conventional-changelog-videojs": "^3.0.0",
    "doctoc": "^1.3.1",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nock": "^13.0.4",
    "not-prerelease": "^1.0.1",
    "npm-merge-driver-install": "^1.0.0",
    "videojs-generator-verify": "~1.0.4",
    "videojs-standard": "^7.0.1"
  },
  "generator-videojs-plugin": {
    "version": "7.3.2"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist"
    ]
  },
  "files": [
    "CONTRIBUTING.md",
    "docs/",
    "src/",
    "test/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "npm run docs:toc",
      "git add"
    ]
  }
}
